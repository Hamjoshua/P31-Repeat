<Application x:Class="prog.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:prog"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Control}" x:Key="CommonControl">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="Margin" Value="10,10"></Setter>            
            <Setter Property="MinWidth" Value="30px"></Setter>
            <Setter Property="MinHeight" Value="20px"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
        </Style>
        <Style TargetType="Button" x:Key="CommonButton" BasedOn="{StaticResource CommonControl}">
            <Setter Property="Background" Value="#FFDBFFF8"></Setter>
            <Setter Property="Padding" Value="6,0"></Setter>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="TextBlock" x:Key="CommonTextBlock">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
    </Application.Resources>
</Application>
